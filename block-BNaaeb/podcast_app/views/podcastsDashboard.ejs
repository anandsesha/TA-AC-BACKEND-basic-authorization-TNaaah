<!DOCTYPE html>
<html>
  <head>
    <title>Podcasts Dashboard</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/stylesheets/articles.css" />
    <link rel="stylesheet" href="/stylesheets/header.css" />
  </head>
  <body>
    <% include partials/header %>

    <div class="main-content">
      <!-- <header>
        <a href="/articles" class="button">All Articles List</a>
        <a href="/articles/new" class="button">Add New Article</a>
        <a href="/users/logout" class="button"> Log Out </a>
      </header> -->
      <h1>List Of All Podcasts</h1>

      <% allPodcastsArray.forEach(podcast => { %>
      <div class="event-card">
        <h2><strong>Title:</strong> <%= podcast.podTitle %></h2>
        <p><strong>Summary:</strong> <%= podcast.podDescription %></p>
        <p><strong>Likes:</strong> <%= podcast.likes ? podcast.likes : 0 %></p>
        <a class="view-button" href="/podcasts/<%= podcasts.slug %>">
          View Podcast Info
        </a>
      </div>

      <% }); %>

      <a href="#scroll-to-content" class="scroll-button">&#x2193;</a>
    </div>
  </body>
</html>
